<div class="row-fluid">
  <div class="span4">
    <div class="well sidebar-nav">
      <input onKeyUp = "searchq(this.value)" type="text" class="form-control" placeholder="Search">
      <hr>
      <ul class="nav nav-list" id="head_list">

       
       <%= render(@links) %>

      </ul>


    </div><!--/.well -->
  
  </div><!--/span-->

  <div class="span8" id="desc_cont">
   
   <h3>Click on a heading</h3>
    
  </div>

</div><!--/row-->



<script type="text/javascript">

function searchq(str)
{

  if(str.length > 2 || str == "")
  {
    if(str == "")
      str = "0";

    $.ajax({
    async: "false",
        type: "GET",

  url: '/list/search/' + str, 
  success: function(data)
    {
      console.log(data);

      $('#head_list').html(data);

       $('#head_list li a').eq(0).click();

    }});
  }
}


function linkclick(e)
{

  $("#head_list li").each(function(i,val){
    $(val).removeClass('active');
  });

  console.log($(e).parent().addClass('active'));
}

</script>